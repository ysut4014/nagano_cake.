<main class="container">
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>
  
  <h5 class="p-5">新規会員登録</h5>
  

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-md-3 mb-3">
        <p>名前</p>
      </div>

      <div class="col-md-3 mb-3">
        <%= f.label :last_name, "(姓)" %>
        <%= f.text_field :last_name, class: "form-control", placeholder: "令和", required: true %>
      </div>

      <div class="col-md-3 mb-3">
        <%= f.label :first_name, "(名)" %>
        <%= f.text_field :first_name, class: "form-control", placeholder: "理子", required: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3 mb-3">
        <p>フリガナ</p>
      </div>

      <div class="col-md-3 mb-3">
        <%= f.label :last_name_kana, "(セイ)" %>
        <%= f.text_field :last_name_kana, class: "form-control", placeholder: "レイワ", required: true %>
      </div>

      <div class="col-md-3 mb-3">
        <%= f.label :first_name_kana, "(メイ)" %>
        <%= f.text_field :first_name_kana, class: "form-control", placeholder: "ミチコ", required: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3 mb-3">
        <p>メールアドレス</p>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.email_field :email, class: "form-control", placeholder: "sample@example.com", required: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3 mb-3">
        <p>郵便番号(ハイフンなし)</p>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.text_field :postal_code, class: "form-control", placeholder: "0000000", required: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3 mb-3">
        <p>住所</p>
      </div>

      <div class="col-md-6 mb-3">
        <%= f.text_field :address, class: "form-control", id: "inputAddress", placeholder: "東京都渋谷区代々木神園町0-0", required: true %>
      </div>
    </div>
    
    <div class="row">
     <div class="col-md-3 mb-3">
      <p>電話番号(ハイフンなし)</p>
     </div>

     <div class="col-md-6 mb-3">
      <%= f.text_field :telephone_number, class: "form-control", placeholder: "0000000000", required: true %>
     </div>
    </div>

    <div class="row">
      <div class="col-md-3 mb-3">
        <p>パスワード</p>
      </div>
      <div class="col-md-6 mb-3">
        <%= f.password_field :password, class: "form-control", required: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3 mb-3">
        <p>パスワード（確認用）</p>
      </div>
      <div class="col-md-6 mb-3">
        <%= f.password_field :password_confirmation, class: "form-control", required: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-3 mb-3">
      </div>
      <div class="col-md-6 mb-3">
        <%= f.button "新規登録", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
  <h5 class="p-3">既に登録済みの方</h5>
  <a href="<%= new_customer_session_path %>">こちら</a>からログインしてください.
</main>
