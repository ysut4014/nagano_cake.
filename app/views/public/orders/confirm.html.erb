<div class="container takasa">
	<h2>注文情報確認</h2>
	<%= form_for @order, url: { action: 'create' } do |f| %>
	<%= debug @order %>
	<!-- テーブル -->
    <div class="row">
        <div class="col-xs-8" style="margin-bottom: 20px;">
            <div class="table-container"><!-- Add a container div for the first table -->
                <table align="left" class="table table-bordered">
				<tr>
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
				</tr>
				<tbody>


				<% @cart_items.each do |cart_item| %>
				<% @total+= (cart_item.item.price*1.1*cart_item.amount).floor %>

<tr>
  <td>
    <% if cart_item.item.image.attached? %>
      <%= image_tag(url_for(cart_item.item.image), size: '30x25', alt: cart_item.item.name, class: "img-thumbnail") %>
    <% else %>
      <%= image_tag('no_image.jpg', size: '30x25', alt: 'No Image', class: "img-thumbnail") %>
    <% end %>							
    <%= cart_item.item.name %>
  </td>
  <td><%= number_to_currency((cart_item.item.price * 1.1).floor) %></td>
  <td><%= cart_item.amount %></td>
  <td><%= number_to_currency((cart_item.item.price * 1.1 * cart_item.amount).floor) %></td>
</tr>
						<% end %>
					</tbody>
                </table>
            </div>
        </div>
        <div class="col-xs-4">
            <div class="table-container"><!-- Add a container div for the second table -->
                <table class="table table-bordered">
						<tr>
							<th>送料</th>
							<th>800</th>
						</tr>
						<tbody>
							<tr>
								<th>商品合計</th>
								<td><%= @total %></td>
							</tr>
							<tr>
								<th>請求額</th>
								<td><%= @total+800 %></td>
							</tr>
						</tbody>
                </table>
            </div>
        </div>
    </div><br>
		<!-- テーブル end -->
    <p><strong>支払方法 </strong><%= @order.payment_method %></p><br>
    <p><strong>お届け先 </strong><%= @order.postal_code %> <%= @order.address %> <%= @order.name %></p><br>
    <%= f.hidden_field :payment_method ,:value => @order.payment_method %>
    <%= f.hidden_field :shipping_fee ,:value => 800 %>
    <%= f.hidden_field :address,:value => @order.address %>
    <%= f.hidden_field :postal_code,:value => @order.postal_code %>
    <%= f.hidden_field :name,:value => @order.name %>
    <%= f.hidden_field :total_price ,:value => @total %><br><br>
    <div class="text-center">
      <%= f.submit "注文を確定する", class: "btn btn-success text-center btn-lg" %>
    </div>
  <% end %>
  <%= form_for @order, url: new_order_path, method: :get do |f| %>
    <%= f.hidden_field :order,:value => @order %>
    <%= f.submit '入力画面へ戻る', class: "btn btn-primary" %>
  <% end %>
</div>