<main class="container">
  <div class="row">

    <div class="col-12">
      <!-- app/views/public/addresses/edit.html.erb -->

      <h5 class="p-5"><strong>編集ページ</strong></h5>

      <%= form_for(@address, url: address_path(@address), method: :patch) do |f| %>

        <div class="form-group row">
          <%= f.label :郵便番号, class: "col-md-2", style: "font-size: smaller; font-weight: bold;" %>
          <div class="col-md-6">
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :住所, class: "col-md-2", style: "font-size: smaller; font-weight: bold;" %>
          <div class="col-md-6">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :宛名, class: "col-md-2", style: "font-size: smaller; font-weight: bold;" %>
          <div class="col-md-6">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row">
        <div class="col-md-6 text-right">
          <%= f.submit '更新する', class: "btn btn-success" %>
        </div>
        </div>
      <% end %>
    </div>

  </div>
</main>
