<main class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="p-5"><strong>配送先登録</strong></h5>
      
      <%= form_for(@address, url: addresses_path, method: :post) do |f| %>
        <div class="form-group row">
          <%= f.label :郵便番号, class: "col-md-2", style: "font-size: smaller; font-weight: bold;" %>
          <div class="col-md-2">
            <%= f.text_field :postal_code, class: "form-control", placeholder: "郵便番号", required: true %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :住所, class: "col-md-2", style: "font-size: smaller; font-weight: bold;" %>
          <div class="col-md-6">
            <%= f.text_field :address, class: "form-control", placeholder: "住所", required: true %>
          </div>
        </div>  
        
        <div class="form-group row">
          <%= f.label :宛名, class: "col-md-2", style: "font-size: smaller; font-weight: bold;" %>
          <div class="col-md-2 mb-3">
            <%= f.text_field :name, class: "form-control", placeholder: "宛名", required: true %>
          </div>
        </div>
        
        <div class="col-md-4 text-right">
          <%= f.submit '新規登録', class: "btn btn-info text_right" %>
        </div>    
      <% end %> 
    </div>
  </div>

  <h5 class="p-5"><strong>配送先一覧</strong></h5>
  <div class="row">
    <div class="col-xs-12">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to '編集する', edit_address_path(address), class: 'btn btn-primary btn-sm' %>
                <%= link_to '削除する', address_path(address), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>      
        </tbody>
      </table>
    </div>
  </div>
</main>
