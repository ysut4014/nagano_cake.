<main class="container">
  <div class="row d-flex align-items-center">
    <div class="col-12 ">
      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <h5 class="p-5"><strong>商品一覧</strong></h5>
<%= link_to "新規商品登録", new_admin_item_path, class: "btn btn-primary" %>      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
            <!-- Add more columns as needed -->
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, item_path(item) %></td>
              <td><%= item.price %>円</td>
              <td><%= item.genre.name %></td>
              <td><%= item.is_sold_out? ? '販売停止中' : '販売中' %></td>
              <!-- Add more columns as needed -->
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</main>
