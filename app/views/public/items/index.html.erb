<main class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="p-5"><strong>商品一覧</strong></h5>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3 mb-4">
            <div class="card box-shadow">
              <%= link_to item_path(item) do %>
                <% if item.image.attached? %>
                  <%= image_tag(item.image, class: "card-img-top", alt: item.name, size: "300x100") %>
                <% else %>
                  <%= image_tag('no_image.jpg', class: "card-img-top", alt: "No Image", size: "300x100") %>
                <% end %>
                <div class="card-body">
                  <p class="card-text"><%= item.name %></p>
                  <p class="card-text">¥<%= item.price %></p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @items, class: 'pagination' %>
      </div>
    </div>
  </div>
</main>
