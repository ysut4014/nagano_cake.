<main class="container">
  <div class="row d-flex align-items-center">
    <div class="col-12 ">
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>
      <h5 class="p-5"><strong>商品一覧</strong></h5>
      
<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>価格</th>
      <th>販売ステータス</th>
      <!-- Add more columns as needed -->
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %>円</td>
        <td><%= item.is_sold_out? ? '販売停止中' : '販売中' %></td>
        <!-- Add more columns as needed -->
      </tr>
    <% end %>
  </tbody>
</table>

    </div>
  </div>
</main>
