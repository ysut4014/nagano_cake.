<main class="container">
  <div class="row">
    <div class="col-md-12">
      <h5 class="p-5"><%= "#{@customer.last_name} #{@customer.first_name}" %> さんの会員情報の編集</h5>

      <%= form_for(@customer, url: admin_customer_path(@customer), method: :patch) do |f| %>

        <div class="row">
          <div class="col-md-3 mb-3">
            <p>会員ID</p>
          </div>
          <div class="col-md-3 mb-3">
            <%= @customer.id %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3 mb-3">
            <%= f.label :name, "名前" %>
          </div>
          <div class="col-md-3 mb-3">
            <%= f.text_field :last_name, class: "form-control" %>
          </div>

          <div class="col-md-3 mb-3">
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3 mb-3">
            <%= f.label :name, "フリガナ" %>
          </div>
          <div class="col-md-3 mb-3">
            <%= f.text_field :last_name_kana, class: "form-control" %>
          </div>

          <div class="col-md-3 mb-3">
            <%= f.text_field :first_name_kana, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3 mb-3">
            <%= f.label :postal_code, "郵便番号" %>
          </div>
          <div class="col-md-3 mb-3">
            <%= f.text_field :postal_code, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3 mb-3">
            <%= f.label :addresses, "住所" %>
          </div>
          <div class="col-md-3 mb-3">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3 mb-3">
            <%= f.label :telephone_number, "電話番号" %>
          </div>
          <div class="col-md-3 mb-3">
            <%= f.text_field :telephone_number, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3 mb-3">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-md-3 mb-3">
            <%= f.text_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3 mb-3">
            <%= f.label :email, "会員ステータス" %>
          </div>
          <div class="col-md-3">
            <td><%= f.select :is_active, [["有効会員","true"], ["退会済み","false"]], class: "form-control" %></td>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3 mb-3"></div>
          <div class="col-md-6 mb-3">
            <%= button_to '更新', admin_customer_path(@customer), method: :patch, class: "btn btn-primary" %>
            <%= link_to '会員一覧', admin_customers_path, class: "btn btn-secondary" %>
          </div>
        </div>

      <% end %>

    </div>
  </div>
</main>
