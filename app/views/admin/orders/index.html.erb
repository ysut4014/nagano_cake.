<div class="container takasa">
  <h2>注文履歴一覧</h2>
  <table class="table-bordered">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
<% @orders.each do |order| %>
  <tr>
    <td><%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
    <td><%= order.customer.last_name + "　" + order.customer.first_name %></td>
    <td><%= order.order_details.sum(:amount) %></td>
    <td><%= "#{order.total_price}円" %></td>
    <td><%= order.status %></td>
    <td><%= link_to "表示する", admin_order_path(order), class: "btn btn-primary" %></td>
  </tr>
<% end %>
            <%= paginate @orders %>
  </table>
</div>
